#!/bin/sh

valid="default keystonev3 stsstack dellstack kernelstack ppc64el powerkvm lxd multihypervisor"

usage() {
  echo "$0 <profile>"
  echo "\tdefault (serverstack) is used if no profile is selected"
  echo "\tvalid profiles = $valid"
}

if [ -z $1 ]; then
  ./profiles/default
else
  if test "${valid#*$1}" != "$valid"; then
    ./profiles/$1
  else
    usage
  fi
fi
